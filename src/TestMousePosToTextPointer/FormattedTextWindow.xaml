<Window x:Class="TestMousePosToTextPointer.FormattedTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestMousePosToTextPointer"
        mc:Ignorable="d"
        Name="MainForm"
        Title="FormattedTextWindow" Height="450" Width="800">
    <Grid>
        <local:TextCanvas Width="{Binding ElementName=MainForm, Mode=TwoWay, Path=Width}"
                          Height="{Binding ElementName=MainForm, Mode=TwoWay, Path=Height}"
                          Padding="20">
            <local:TextCanvas.Resources>
                <Style TargetType="local:TextCanvas">
                    <Setter Property="Text" Value="Test"/>
                    <Setter Property="Background" Value="AntiqueWhite"/>
                </Style>
            </local:TextCanvas.Resources>
        </local:TextCanvas>
    </Grid>
</Window>
